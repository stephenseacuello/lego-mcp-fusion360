{
  "//": "Claude Desktop MCP Configuration for LEGO Brick Maker",
  "//": "Copy the 'mcpServers' section to your claude_desktop_config.json",
  "//": "",
  "//": "Config file locations:",
  "//": "  Windows: %APPDATA%\\Claude\\claude_desktop_config.json",
  "//": "  macOS:   ~/Library/Application Support/Claude/claude_desktop_config.json",
  "//": "  Linux:   ~/.config/claude/claude_desktop_config.json",
  
  "mcpServers": {
    "lego-brick-maker": {
      "command": "python",
      "args": ["-m", "src.server"],
      "cwd": "/path/to/lego-mcp-fusion360/mcp-server",
      "env": {
        "FUSION_API_URL": "http://127.0.0.1:8767",
        "SLICER_API_URL": "http://localhost:8766",
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}
