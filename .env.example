# LEGO MCP Studio - Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# DASHBOARD
# =============================================================================

# Flask server port
FLASK_PORT=5000

# Environment: development, testing, production
FLASK_ENV=development

# Secret key (generate a random one for production)
SECRET_KEY=change-this-in-production

# =============================================================================
# SERVICES
# =============================================================================

# MCP Server URL
MCP_SERVER_URL=http://localhost:8000

# Fusion 360 Add-in API URL (port 8767 - matches LegoMCP.py)
FUSION_API_URL=http://localhost:8767

# Slicer Service URL (port 8766 - matches docker-compose.yml)
SLICER_URL=http://localhost:8766

# =============================================================================
# VISION SYSTEM
# =============================================================================

# Detection backend: auto, yolo, roboflow, mock
# - auto: Tries yolo first, then roboflow, falls back to mock
# - yolo: Local YOLO11 detection (requires ultralytics)
# - roboflow: Cloud-based detection (requires API key)
# - mock: Fake detections for testing (no camera needed)
DETECTION_BACKEND=auto

# Minimum confidence threshold for detections (0.0 - 1.0)
DETECTION_THRESHOLD=0.5

# YOLO model size: yolov8n (fast), yolov8s, yolov8m, yolov8l (accurate)
YOLO_MODEL=yolov8n

# Roboflow API key (get from roboflow.com)
ROBOFLOW_API_KEY=

# Roboflow model ID
ROBOFLOW_MODEL=lego-bricks/1

# =============================================================================
# CAMERA
# =============================================================================

# Camera device index (0 = default webcam)
CAMERA_INDEX=0

# Camera resolution
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# =============================================================================
# STORAGE
# =============================================================================

# Data directory for inventory, builds, etc.
DATA_DIR=./services/data

# Output directory for STL, G-code files
OUTPUT_DIR=../output

# =============================================================================
# OPTIONAL
# =============================================================================

# Enable debug logging
DEBUG=false

# Log file path (empty = console only)
LOG_FILE=

# Enable CORS for API (comma-separated origins)
CORS_ORIGINS=
