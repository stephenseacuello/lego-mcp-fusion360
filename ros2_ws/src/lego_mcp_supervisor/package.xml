<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>lego_mcp_supervisor</name>
  <version>1.0.0</version>
  <description>
    OTP-style supervision patterns for LEGO MCP ROS2 nodes.
    Provides fault-tolerant node supervision with restart strategies
    similar to Erlang/OTP supervisors (one_for_one, one_for_all, rest_for_one).
  </description>
  <maintainer email="lego-mcp@example.com">LEGO MCP Team</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_python</buildtool_depend>

  <!-- ROS2 core dependencies -->
  <depend>rclpy</depend>
  <depend>std_msgs</depend>
  <depend>std_srvs</depend>
  <depend>lifecycle_msgs</depend>
  <depend>diagnostic_msgs</depend>

  <!-- Lifecycle node support -->
  <depend>rclpy</depend>
  <depend>lifecycle_msgs</depend>

  <!-- Custom message dependencies -->
  <depend>lego_mcp_msgs</depend>

  <!-- Test dependencies -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>ament_cmake_pytest</test_depend>
  <test_depend>python3-pytest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
