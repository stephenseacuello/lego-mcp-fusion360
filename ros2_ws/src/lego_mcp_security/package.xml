<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>lego_mcp_security</name>
  <version>7.0.0</version>
  <description>
    SROS2 Security Framework for LEGO MCP

    Implements:
    - SROS2 key/certificate management
    - IEC 62443 security zone definitions
    - Node-level access control
    - Security audit pipeline
    - Intrusion detection for DDS

    Industry 4.0/5.0 Architecture - ISA-95 Security Layer
  </description>
  <maintainer email="noreply@legomcp.dev">LEGO MCP Team</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_python</buildtool_depend>

  <depend>rclpy</depend>
  <depend>std_msgs</depend>
  <depend>std_srvs</depend>
  <depend>diagnostic_msgs</depend>
  <depend>rcl_interfaces</depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>python3-pytest</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
