<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>lego_mcp_safety</name>
  <version>1.0.0</version>
  <description>Safety systems for LEGO MCP factory cell - e-stop, monitoring, collision detection</description>
  <maintainer email="admin@legomcp.local">LEGO MCP Team</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>
  <buildtool_depend>ament_cmake_python</buildtool_depend>

  <depend>rclpy</depend>
  <depend>std_msgs</depend>
  <depend>std_srvs</depend>
  <depend>sensor_msgs</depend>
  <depend>lego_mcp_msgs</depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
