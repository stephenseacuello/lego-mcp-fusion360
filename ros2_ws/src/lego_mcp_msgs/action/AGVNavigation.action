# AGVNavigation.action - AGV navigation action
# LEGO MCP Manufacturing System v7.0

# Goal
string agv_id                       # AGV to navigate
geometry_msgs/PoseStamped goal_pose # Target pose
string station_id                   # Target station (alternative to pose)

# Navigation options
float32 max_velocity                # Maximum velocity (m/s)
bool precise_docking                # Require precise docking
float32 position_tolerance          # Position tolerance (m)
float32 orientation_tolerance       # Orientation tolerance (rad)
bool allow_replanning               # Allow dynamic replanning

---
# Result
bool success                        # Navigation successful
string message                      # Human-readable result

# Final state
geometry_msgs/PoseStamped final_pose  # Actual final pose
float32 position_error              # Position error from goal
float32 orientation_error           # Orientation error from goal
float32 total_distance_m            # Total distance traveled
float32 total_time_sec              # Total navigation time

# Statistics
uint32 replan_count                 # Number of replans
uint32 recovery_count               # Number of recovery behaviors

---
# Feedback
# Current state
geometry_msgs/PoseStamped current_pose  # Current pose
geometry_msgs/Twist current_velocity    # Current velocity

# Progress
float32 distance_remaining_m        # Distance to goal
float32 estimated_time_remaining_sec # Estimated time remaining
float32 progress_percent            # Overall progress (0-100)

# Path information
uint32 current_waypoint             # Current waypoint index
uint32 total_waypoints              # Total waypoints in path
geometry_msgs/PoseStamped next_waypoint  # Next waypoint

# Status
string status_message               # Current status
bool recovering                     # Currently in recovery behavior
string recovery_reason              # Why recovering
