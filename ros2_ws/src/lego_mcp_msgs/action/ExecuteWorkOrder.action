# ExecuteWorkOrder.action - Execute manufacturing work order
# LEGO MCP Manufacturing System v7.0
# ISA-95 Compliant Work Order Execution

# Goal
string work_order_id                # Work order to execute
string job_id                       # Specific job (empty for all)

# Execution options
bool auto_schedule                  # Auto-schedule operations
bool parallel_operations            # Allow parallel operation execution
bool stop_on_quality_fail           # Stop on quality failure
bool require_confirmation           # Require operator confirmation

# Priority override
uint8 priority_override             # Priority override (0 = use WO priority)

---
# Result
bool success                        # Execution completed successfully
string message                      # Human-readable result

# Completion summary
uint32 operations_completed         # Operations completed
uint32 operations_failed            # Operations that failed
uint32 parts_produced               # Parts produced
uint32 parts_passed_quality         # Parts passing quality
uint32 parts_failed_quality         # Parts failing quality
uint32 parts_reworked               # Parts reworked

# Timing
builtin_interfaces/Time start_time  # Actual start time
builtin_interfaces/Time end_time    # Actual end time
float32 total_duration_sec          # Total duration
float32 productive_time_sec         # Productive time
float32 downtime_sec                # Downtime

# Quality metrics
float32 first_pass_yield            # First pass yield (0-1)
float32 overall_yield               # Overall yield (0-1)
float32 average_quality_score       # Average quality score

# Resource usage
float32 material_consumed_kg        # Total material consumed
float32 energy_consumed_kwh         # Energy consumed

---
# Feedback
# Current operation
string current_operation_id         # Current operation
string current_operation_name       # Operation name
uint32 operation_index              # Operation index
uint32 total_operations             # Total operations

# Progress
float32 overall_progress            # Overall progress (0-100)
float32 operation_progress          # Current operation progress (0-100)
uint32 parts_completed              # Parts completed so far

# Current equipment
string current_equipment_id         # Equipment executing operation
string equipment_status             # Equipment status

# Timing
float32 elapsed_time_sec            # Elapsed time
float32 estimated_remaining_sec     # Estimated remaining time

# Status
string status_message               # Current status message
bool waiting_for_resource           # Waiting for resource
string waiting_reason               # Why waiting
bool quality_hold                   # On quality hold
