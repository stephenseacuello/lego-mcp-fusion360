# LifecycleTransition.srv - Request lifecycle state transition
# LEGO MCP Manufacturing System v7.0
# ROS2 Lifecycle Node Management

# Request
string node_name                    # Target node name
string node_namespace               # Node namespace (optional)

# Transition to request
uint8 TRANSITION_CONFIGURE = 1      # unconfigured -> configuring -> inactive
uint8 TRANSITION_CLEANUP = 2        # inactive -> cleaningup -> unconfigured
uint8 TRANSITION_ACTIVATE = 3       # inactive -> activating -> active
uint8 TRANSITION_DEACTIVATE = 4     # active -> deactivating -> inactive
uint8 TRANSITION_SHUTDOWN = 5       # any -> shuttingdown -> finalized
uint8 transition_id

# Options
bool wait_for_completion            # Wait until transition completes
float32 timeout_sec                 # Timeout for transition (0 = default 30s)
bool cascade_to_dependents          # Apply to dependent nodes as well

---
# Response
bool success                        # True if transition completed successfully
string message                      # Human-readable result message

# State information
uint8 STATE_UNKNOWN = 0
uint8 STATE_UNCONFIGURED = 1
uint8 STATE_INACTIVE = 2
uint8 STATE_ACTIVE = 3
uint8 STATE_FINALIZED = 4
uint8 STATE_CONFIGURING = 10
uint8 STATE_CLEANINGUP = 11
uint8 STATE_ACTIVATING = 12
uint8 STATE_DEACTIVATING = 13
uint8 STATE_SHUTTINGDOWN = 14
uint8 STATE_ERRORPROCESSING = 15
uint8 previous_state                # State before transition
uint8 current_state                 # State after transition

# Timing
float32 transition_duration_sec     # How long transition took

# Error information (if failed)
string error_code                   # Error code if transition failed
string error_detail                 # Detailed error information
