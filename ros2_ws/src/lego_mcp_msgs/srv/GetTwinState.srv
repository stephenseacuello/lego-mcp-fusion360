# GetTwinState.srv - Request current digital twin state
# LEGO MCP Manufacturing System v7.0

# Request
string twin_id                     # Twin ID (empty for default)
bool include_equipment_details     # Include detailed equipment status
bool include_spatial_data          # Include poses and transforms
bool include_predictions           # Include PINN predictions
bool include_history               # Include recent state history
uint32 history_duration_sec        # History duration in seconds

---

# Response
bool success                       # Request succeeded
string message                     # Success/error message

# Current state
lego_mcp_msgs/TwinState current_state  # Current twin state

# Optional detailed equipment (if requested)
lego_mcp_msgs/EquipmentStatus[] equipment_details

# Optional history (if requested)
lego_mcp_msgs/TwinState[] state_history
builtin_interfaces/Time[] history_timestamps

# Sync status
bool is_synchronized               # Twin is synchronized
float32 sync_latency_ms            # Current sync latency
builtin_interfaces/Time last_sync  # Last synchronization time
uint32 pending_updates             # Updates pending sync
