# DispatchAGV.srv - Dispatch AGV for mission
# LEGO MCP Manufacturing System v7.0

# Request
lego_mcp_msgs/AGVMission mission    # Mission to dispatch

# Assignment options
string preferred_agv_id             # Preferred AGV (empty for auto-assign)
bool allow_queue                    # Allow queueing if all AGVs busy
float32 max_wait_time_sec           # Max time to wait for available AGV

---
# Response
bool success                        # Dispatch successful
string message                      # Human-readable result

# Assignment result
string assigned_agv_id              # AGV assigned to mission
string mission_id                   # Confirmed mission ID
builtin_interfaces/Time estimated_start  # Estimated start time
builtin_interfaces/Time estimated_completion  # Estimated completion time
float32 estimated_distance_m        # Estimated travel distance

# Queue information (if queued)
bool queued                         # Mission was queued
uint32 queue_position               # Position in queue
float32 estimated_wait_sec          # Estimated wait time

# Rejection reason (if failed)
string rejection_reason             # Why dispatch failed
string[] unavailable_reasons        # Why specific AGVs unavailable
