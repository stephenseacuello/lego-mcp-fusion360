# RequestInspection.srv - Request quality inspection
# LEGO MCP Manufacturing System v7.0
# ISO 9001 Compliant

# Request
string part_id                      # Part to inspect
string serial_number                # Part serial number
string work_order_id                # Associated work order

# Inspection requirements
uint8 inspection_type               # Type of inspection (from InspectionResult.msg)
string[] required_checks            # Specific checks required
string inspection_plan_id           # Inspection plan to use (empty = default)

# Measurement requirements
string[] characteristics_to_measure # Specific characteristics
bool full_dimensional               # Full dimensional inspection

# Options
string preferred_station            # Preferred inspection station
float32 max_wait_time_sec           # Maximum wait time
bool priority                       # Priority inspection
bool destructive_allowed            # Allow destructive testing

---
# Response
bool success                        # Request accepted
string message                      # Human-readable result

# Scheduling
string inspection_id                # Assigned inspection ID
string assigned_station             # Assigned inspection station
builtin_interfaces/Time scheduled_time  # Scheduled inspection time
float32 estimated_duration_sec      # Estimated inspection duration

# If immediate result available
bool result_available               # Immediate result available
lego_mcp_msgs/InspectionResult result  # Inspection result (if available)
