# RescheduleRemaining.srv - Reschedule remaining operations after failure/change
# LEGO MCP Manufacturing System v7.0

# Request
string work_order_id               # Work order to reschedule (or empty for all)
string failed_equipment_id         # Equipment that failed (to exclude)
string failure_id                  # Reference to failure event
uint8 urgency                      # 1=normal, 2=expedite, 3=emergency
bool exclude_failed_equipment      # Exclude failed equipment from reschedule
string[] additional_excluded       # Additional equipment to exclude
string rescheduling_reason         # Reason for rescheduling
bool notify_downstream             # Notify downstream operations

---

# Response
bool success                       # Rescheduling succeeded
string message                     # Success/error message
string new_schedule_id             # New schedule ID

# Rescheduled operations
string[] operation_ids             # Rescheduled operation IDs
string[] previous_equipment        # Previous equipment assignments
string[] new_equipment             # New equipment assignments
builtin_interfaces/Time[] new_start_times   # New start times
builtin_interfaces/Time[] new_end_times     # New end times

# Impact assessment
float32 delay_minutes              # Total delay introduced
uint32 operations_affected         # Number of operations affected
string[] work_orders_affected      # All work orders affected
float32 cost_impact                # Estimated cost impact

# Schedule comparison
float32 previous_makespan_min      # Previous makespan
float32 new_makespan_min           # New makespan
float32 previous_utilization       # Previous utilization
float32 new_utilization            # New utilization
