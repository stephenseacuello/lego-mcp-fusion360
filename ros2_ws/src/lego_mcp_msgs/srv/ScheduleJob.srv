# ScheduleJob.srv - Request to schedule a manufacturing job
# LEGO MCP Manufacturing System v7.0

# Request
string work_order_id               # Work order to schedule
string part_id                     # Part to manufacture
uint32 quantity                    # Quantity to produce
uint8 priority                     # 1=low, 2=normal, 3=high, 4=urgent, 5=emergency
string[] preferred_equipment       # Preferred equipment IDs (optional)
string[] excluded_equipment        # Equipment to exclude (optional)
builtin_interfaces/Time deadline   # Deadline for completion (optional)
string scheduling_strategy         # Strategy: cp_sat, nsga2, priority_dispatch, qaoa
bool allow_split                   # Allow splitting across equipment
string notes                       # Additional scheduling notes

---

# Response
bool success                       # Scheduling succeeded
string message                     # Success/error message
string schedule_id                 # Created schedule ID

# Scheduled operations
string[] operation_ids             # Scheduled operation IDs
string[] assigned_equipment        # Equipment assigned to each operation
builtin_interfaces/Time[] start_times    # Scheduled start times
builtin_interfaces/Time[] end_times      # Scheduled end times
float32[] durations_min            # Estimated durations in minutes

# Schedule metrics
float32 total_duration_min         # Total schedule duration
float32 makespan_min               # Makespan (completion time)
float32 utilization_percent        # Equipment utilization
builtin_interfaces/Time estimated_completion  # Estimated completion time
