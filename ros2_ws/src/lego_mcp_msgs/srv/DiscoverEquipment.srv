# DiscoverEquipment.srv - Discover manufacturing equipment
# LEGO MCP Manufacturing System v7.0

# Request
# Filter options
uint8 equipment_type                # Filter by type (255 = all)
string work_center_id               # Filter by work center (empty = all)
string[] required_capabilities      # Required capabilities
bool online_only                    # Only return online equipment
bool include_offline                # Include offline equipment

# Discovery options
float32 timeout_sec                 # Discovery timeout
bool force_rescan                   # Force network rescan
string[] network_ranges             # Specific network ranges to scan

---
# Response
bool success                        # Discovery completed successfully
string message                      # Human-readable result

# Discovered equipment
lego_mcp_msgs/EquipmentDiscovery[] equipment  # List of discovered equipment
uint32 total_found                  # Total equipment found
uint32 online_count                 # Online equipment count
uint32 offline_count                # Offline equipment count

# Discovery statistics
float32 scan_duration_sec           # How long scan took
string[] scanned_networks           # Networks that were scanned
string[] unreachable_ranges         # Network ranges that couldn't be scanned
