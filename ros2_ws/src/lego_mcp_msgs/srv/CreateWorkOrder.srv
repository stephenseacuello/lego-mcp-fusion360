# CreateWorkOrder.srv - Create a new manufacturing work order
# LEGO MCP Manufacturing System v7.0

# Request
string part_id                     # Part to manufacture (brick ID or model ID)
uint32 quantity                    # Quantity to produce
uint8 priority                     # 1=low, 2=normal, 3=high, 4=urgent
string customer_id                 # Customer ID (optional)
string order_reference             # External order reference (optional)
builtin_interfaces/Time requested_date  # Requested completion date
string[] required_operations       # Required operations (print, inspect, assemble)
string material_type               # Material specification
string color                       # Color specification
string notes                       # Additional notes
bool auto_schedule                 # Automatically schedule after creation

---

# Response
bool success                       # Creation succeeded
string message                     # Success/error message
string work_order_id               # Created work order ID

# Work order details
string status                      # Initial status (draft, planned, released)
string[] operation_ids             # Generated operation IDs
float32 estimated_cost             # Estimated cost
float32 estimated_duration_min     # Estimated duration in minutes
string[] required_materials        # Required materials
float32[] material_quantities      # Material quantities needed
bool materials_available           # Materials currently available
builtin_interfaces/Time created_at
