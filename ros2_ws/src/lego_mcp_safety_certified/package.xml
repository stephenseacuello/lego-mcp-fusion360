<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>lego_mcp_safety_certified</name>
  <version>1.0.0</version>
  <description>
    IEC 61508 SIL 2+ Certified Safety Node for LEGO MCP Manufacturing System.

    This package implements safety-critical control functions with:
    - MISRA C++ 2023 compliant code
    - Dual-channel redundant e-stop with cross-monitoring
    - Hardware watchdog timer integration
    - Deterministic response time (< 10ms WCET)
    - Formal verification via TLA+ and SPIN

    Certification Target: IEC 61508 SIL 2
    Safety Integrity: High Demand Mode
    Hardware Fault Tolerance: 1 (dual-channel)
  </description>

  <maintainer email="safety@legomcp.io">LEGO MCP Safety Engineering</maintainer>
  <license>Proprietary - Safety Critical</license>

  <author email="safety@legomcp.io">LEGO MCP Safety Team</author>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <!-- Core ROS2 dependencies -->
  <depend>rclcpp</depend>
  <depend>rclcpp_lifecycle</depend>
  <depend>rclcpp_components</depend>
  <depend>std_msgs</depend>
  <depend>std_srvs</depend>
  <depend>diagnostic_msgs</depend>
  <depend>lifecycle_msgs</depend>

  <!-- Real-time dependencies -->
  <depend>realtime_tools</depend>
  <depend>realtime_publisher</depend>

  <!-- Custom messages -->
  <depend>lego_mcp_msgs</depend>

  <!-- Hardware interface -->
  <depend>pigpio</depend>

  <!-- Testing -->
  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_cmake_gtest</test_depend>
  <test_depend>ament_cmake_gmock</test_depend>

  <export>
    <build_type>ament_cmake</build_type>

    <!-- Safety certification metadata -->
    <safety_certification>
      <standard>IEC 61508</standard>
      <sil_level>2</sil_level>
      <assessment_body>TÜV SÜD</assessment_body>
      <certificate_id>PENDING</certificate_id>
    </safety_certification>
  </export>
</package>
